@model CijferRegistratie.Models.Poging

@{
    ViewData["Title"] = "CreateSpecial";
}

<h1>CreateSpecial</h1>

<h4>Poging voor @ViewBag.VakNaam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSpecial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Jaar" class="control-label"></label>
                <input asp-for="Jaar" class="form-control" value="@DateTime.Now.Year"/>
                <span asp-validation-for="Jaar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resultaat" class="control-label"></label>
                <input asp-for="Resultaat" class="form-control" />
                <span asp-validation-for="Resultaat" class="text-danger"></span>
            </div>
           <div class="form-group">
                <input asp-for="VakId" class ="form-control" value="@ViewBag.VakId" type="hidden"></input>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
