@model DeveloperViewModel
@{
    ViewData["Title"] = "Contact " + @Model.DeveloperPerson.Name;  
}

<script defer src="~/js/contact.js"></script> 
<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<h3>Contact @Model.DeveloperPerson.Name:</h3>
<section>
    <div class="row">
    <div class="col-md-4">
        <form id="ContactForm" asp-action="View" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Onderwerp</label>
                <input type="text" id="subject" class="form-control" required maxlength="200"/>
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Email</label>
                <input type="email" id="email" class="form-control" required />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Bericht</label>
                <textarea type="text" id="message" class="form-control" required maxlength="600"></textarea>
                <span class="text-danger"></span>
            </div>

            <br />
            <div class="g-recaptcha" data-sitekey="6LedxnkkAAAAAPc8bFYCHeDbwj6vLVCtuagvZG2o" data-callback="GetResponseKey"></div>

            <div class="form-group">
                <br>
                <input type="submit" value="Verzend" class="btn btn-primary"/>
            </div>

    </label>
        </form>
    </div>
</div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }