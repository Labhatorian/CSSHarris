@model DeveloperViewModel
@{
    ViewData["Title"] = "Contact " + @Model.DeveloperPerson.Name;  
}

<script defer src="~/js/contact.js"></script> 
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />

<h3>Contact @Model.DeveloperPerson.Name:</h3>
<h6>Stuur een bericht naar de developer</h6>
<section>
    <div class="row">
    <div class="col-md-4">
            <form id="ContactForm" asp-action="View" method="post">
                <div class="form-group">
                <label class="control-label">Onderwerp</label>
                <input type="text" id="subject" class="form-control" required maxlength="200"/>
                    <i id="ErrorSubject" class="hide">Het onderwerp mag niet meer dan 600 tekens bevatten</i>
                <span class="text-danger"></span>
            </div>

                <div class="form-group">
                <label class="control-label">Email</label>
                <input type="email" id="email" class="form-control" required />
                <i id="ErrorEmail" class="hide">Email is fout en/of mag niet meer dan 600 tekens bevatten</i>
                <span class="text-danger"></span>
            </div>

                <div class="form-group">
                <label class="control-label">Bericht</label>
                <textarea type="text" id="message" class="form-control" required maxlength="600"></textarea>
                    <i id="ErrorMessage" class="hide">Het bericht mag niet meer dan 600 tekens bevatten</i>
                <span class="text-danger"></span>
            </div>
            <br />
                <div class="g-recaptcha" data-sitekey="6LdiaZIkAAAAACtxhDrL-lNmcpWpjcwvWEttM15R" data-callback="GetResponseKey" data-expired-callback="ClearResponseKey" data-error-callback="ClearResponseKey"></div>
                <i id="ErrorCaptcha" class="hide">De captcha moet ingevuld zijn</i>
                <br />
                <div class="form-group contact-content-loading__divoffset">
                <input id="submitbutton" type="submit" value="Verzend" class="btn btn-primary contact-content__submit"/>
                <div id="spinningcircle" class="loader contact-content__loading hide"></div>
            </div>
        </form>
    </div>
</div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }